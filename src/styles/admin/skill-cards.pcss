.skill-cards,
.skill-cards__list{
  display: flex;
  flex-wrap: wrap;
  flex: 1;
  width: 100%;
}

.skill-cards__item{
  display: flex;
  flex-direction: column;
  width: 45%;
  max-width: 525px;
  max-height: 387px;
  margin-right: 30px;
  margin-bottom: 30px;
  padding: 30px 28px;
  box-shadow: 4px 3px 20px rgba(0, 0, 0, 0.07);
  background-color: #ffffff;
}