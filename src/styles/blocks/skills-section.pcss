.skills-section__block {
  display: flex;
  flex-direction: column;
  margin-bottom: 15px;
}

.skills-section__title {
  font-weight: 600;
  opacity: 0.9;
  margin-bottom: 10px;
}

.skills-section__tags-block {
  display: flex;
  flex-wrap: wrap;
}

.skills-tag {
  margin-right: 15px;
  padding: 10px 20px;
  font-size: 16px;
  background-color: #bac3d183;
  border-radius: 23px;
  margin-bottom: 8px;
}