footer.footer
  .container.footer__container
    .footer__copyright
      .copyright
        .copyright__year Â© 2022
        .copyright__info
          .copyright__username Julia Aseeva
          .copyright__desc Personal website of a web developer
    .footer__data
      .footer__menu
        nav.nav.nav--color-white
          ul.nav__list
            each item in menu
              li.nav__item
                a(href=item.linkSec).nav__link #{item.title}
