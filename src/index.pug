include ./mixins.pug

- 
  var menu = [
    {title: "Главная", linkSec : "#hero"},
    {title: "Обо мне", linkSec : "#about"},
    {title: "Навыки", linkSec : '#skills'},
    {title: "Работы", linkSec : '#works'},
    {title: "Отзывы", linkSec : '#reviews'},
    {title: "Связаться", linkSec : '#form'}
  ]


<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body

    .preloader
      .loader
      
    .wrapper
      include ./components/header
      .maincontent
        .welcome-section        
          
          include ./components/parallax-mount
          .fullscreensection.hero#hero
            .container.hero__container
              .hero__content
                .user-info
                  h1.user-info__descr Личный сайт<br>веб-разработчика
                  .user-info__name Юлия<br>Асеева
              .hero__scroll-button
                a(href="#about").scroll-down-button Скролл
                  +icon(`scroll`, 'scroll__icon')
          
          .fullscreensection.fullscreensection_centered.about#about
            .container.about__container
              include ./components/about-section
        
        .section.skills#skills
          .container.skills__container
            .skills-descr
              h2.skills-descr__title Чем я могу быть полезна вам
              .skills-descr__about
                p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
            .skills-block
              .skills-person-bag
                  +image(`content/bag.png`, 'skills-bag__img', 'Рюкзак')
              #skills-component
        
        .section.works#works
          .container.works__container
            h2.title.works-title Мои работы
            .works-content
              #works-component      
        
        .contacts-section
          .container__contacts
            .section.reviews#reviews
              .container.reviews__container
                .reviews__content-wrapper
                  #reviews-component
            .section.form#form
              .container.form__container
                h2.title.form__title Связаться со мной
                form.form__content
                  .form__row
                    .form__block.form__block--name
                      label.form__label Введите ваше имя
                      .form__input
                        +icon(`user`, 'form__block-icon')
                        input#name.form__block-input(type='text', name='name', placeholder="Иванов Иван", required='')
                    .form__block.form__block--email
                      label.form__label Введите ваш email
                      .form__input
                        +icon(`envelope`, 'form__block-icon')
                        input#email.form__block-input(type='email', name='email', placeholder='ivanov@gmail.com', required='')             
                  .form__row
                    .form__block
                      label.form__label Сообщение к письму
                      .form__input.form__input--comment
                        +icon(`message`, 'form__block-icon')
                        textarea.form__input.form__textarea(id="message" name="message" type="text" required rows="2"
                          placeholder="Требуется ваша помощь")
                button(type="submit").form__button Отправить
              include ./components/form-popup
          include ./components/footer
    
    include ./templates/entry.pug

              


                