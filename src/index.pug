include ./mixins.pug

- 
  var menu = [
    {title: "Home", linkSec : "#hero"},
    {title: "About me", linkSec : "#about"},
    {title: "Skills", linkSec : '#skills'},
    {title: "Works", linkSec : '#works'},
    {title: "Contacts", linkSec : '#form'}
  ]


<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body

    .preloader
      .loader
      
    .wrapper
      include ./components/header
      .maincontent
        .welcome-section        
          
          include ./components/parallax-mount
          .fullscreensection.hero#hero
            .container.hero__container
              .hero__content
                .user-info
                  h1.user-info__descr Personal website<br>of a web developer
                  .user-info__name
                    .user-info__firstName Julia
                    .user-info__lastName Aseeva
              .hero__scroll-button
                a(href="#about").scroll-down-button Scroll
                  +icon(`scroll`, 'scroll__icon')
          
          .fullscreensection.fullscreensection_centered.about#about
            .container.about__container
              include ./components/about-section
        
        .section.skills#skills
          .container.skills__container
            .skills-descr
              h2.skills-descr__title Skills set
            .skills-block
              .skills-person-bag
                  +image(`content/bag.png`, 'skills-bag__img', 'bag')
              //- #skills-component
              include ./components/skills-section
        
        .section.works#works
          .container.works__container
            h2.title.works-title Works portfolio
            .works-content
              #works-component      
        
        .contacts-section
          .container__contacts
            .section.form#form
              .container.form__container
                h2.title.form__title Contacts with me
                form.form__content
                  .form__row
                    .form__block.form__block--name
                      label.form__label Enter your name
                      .form__input
                        +icon(`user`, 'form__block-icon')
                        input#name.form__block-input(type='text', name='name', placeholder="Ivanov Ivan", required='')
                    .form__block.form__block--email
                      label.form__label Enter your email
                      .form__input
                        +icon(`envelope`, 'form__block-icon')
                        input#email.form__block-input(type='email', name='email', placeholder='ivanov@gmail.com', required='')             
                  .form__row
                    .form__block
                      label.form__label Message to letter
                      .form__input.form__input--comment
                        +icon(`message`, 'form__block-icon')
                        textarea.form__input.form__textarea(id="message" name="message" type="text" required rows="2"
                          placeholder="Your help is required")
                button(type="submit").form__button Send
              include ./components/form-popup
          include ./components/footer
    
    include ./templates/entry.pug

              


                